extends baseEmail

block content
  p Hi #{firstName},
  p Forgot your password? Please click on the button to reset your password.
  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href=`${url}`, target='_blank') Reset your password
  p If this button doesn't work, please click on this link instead to reset your password:
  a(href=`${url}`, target='_blank') #{url}.
  p
  p If you didn't forget your password, please ignore this email!
